{
  "name": "12-to-24 Hour Converter",
  "action": {},
  "manifest_version": 3,
  "version": "1.0.1.1",
  "description": "Converts any 12-hour AM/PM timestamp to 24-hour",
  "icons": {
    "16": "icons/nasapod16x16.png",
    "32": "icons/nasapod32x32.png",
    "48": "icons/nasapod48x48.png",
    "128": "icons/nasapod128x128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "host_permissions": [
    "*://**"
  ]
}